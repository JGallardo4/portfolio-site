<!DOCTYPE html>
<!-- Use Block__Element--Modifier -->
<html>
	<head>
		<meta charset="utf-8" />

		<meta name="viewport" content="width=device-width" />

		<title>@ViewBag.Title</title>

		<environment include="Development">
			@RenderSection("Style", required: true)
		</environment>

		<link rel="icon" type="image/svg+xml" href="~/images/favicon.svg">

		<script src="https://kit.fontawesome.com/df3d0cc377.js"
			crossorigin="anonymous"></script>
	</head>

	<body>
		<header id="site-header">
			<a id="logo-container" asp-area="" asp-controller="Home" asp-action="Index">
				<partial name="_LogoPartial" />
			</a><!-- End of logo -->

			<div id="site-title">
				<h1>Juan Gallardo</h1>
				<h2>Web developer</h2>
			</div>
			
			<!-- Hamburger menu -->
			<input id="collapsible" class="toggle" type="checkbox">
			<label for="collapsible" class="toggle-label"></label>

			<ul id="nav" role="navigation">
				<a id="projects" 
				href="/Projects" 
				class="nav-item">
					<li>Projects</li>
				</a>

				<a id="contact" 
				href="/Contact"
				class="nav-item">
					<li>Contact</li>
				</a>

				<a id="about" 
				href="/About"
				class="nav-item">
					<li>About</li>
				</a>

				<a id="github"
				class="external"
				target="_blank"
				href="https://github.com/Juan-G-04/" class="nav__item">
					<li>Github <i class="fa fa-external-link" aria-hidden="true"></i></li>
				</a>

				<a id="linkedin"
				class="external"
				target="_blank"
				href="https://www.linkedin.com/in/jgallardo-dev" class="nav__item">
					<li>LinkedIn <i class="fa fa-external-link" aria-hidden="true"></i></li>
				</a>		
			</ul>
		</header>
		
		<main id="site-main">
			@RenderBody()
		</main>
	</body>
</html>
